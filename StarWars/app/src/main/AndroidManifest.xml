<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.starwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controllers.StarWarsMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.PeoplesCategory" />
        <activity android:name=".Controllers.DetailActivityPeoples" />
        <activity android:name=".Controllers.PlanetsCategory" />
        <activity android:name=".Controllers.DetailActivityPlanets" />
        <activity android:name=".Controllers.FilmsCategory" />
        <activity android:name=".Controllers.DetailActivityFilms" />
        <activity android:name=".Controllers.SpeciesCategory" />
        <activity android:name=".Controllers.DetailActivitySpecies" />
        <activity android:name=".Controllers.VehiclesCategory" />
        <activity android:name=".Controllers.DetailActivityVehicles" />
        <activity android:name=".Controllers.StarshipsCategory" />
        <activity android:name=".Controllers.DetailActivityStarships"></activity>
    </application>

</manifest>